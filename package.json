{
  "name": "mmcss",
  "version": "0.2.3",
  "description": "A Minimal Modern CSS Framework.",
  "main": "dist/mm.css",
  "dependencies": {},
  "devDependencies": {
    "mmpilot": "^0.1.7",
    "npm-run-all": "^3.1.0",
    "shx": "^0.1.4"
  },
  "keywords": [
    "css",
    "css3",
    "front-end",
    "framework",
    "html",
    "html5",
    "responsive",
    "mobile",
    "scss"
  ],
  "scripts": {
    "dev-build": "mmpilot clean && mmpilot build -c _mmpilot.yml,_mmpilot-dev.yml",
    "dev-watch": "mmpilot watch -c _mmpilot.yml,_mmpilot-dev.yml",
    "clean": "mmpilot clean",
    "build": "mmpilot build",
    "serve": "mmpilot serve",
    "dev": "npm-run-all dev-build --parallel dev-watch serve",
    "deploy": "npm run clean && npm run build && mmpilot deploy",
    "dist": "npm run build && shx cp public/**/*.css dist && git add dist/*.css && git commit -m \"Updating dist\" && git push -u origin master",
    "dist-patch": "npm run dist && npm version patch -m \"Version %s\" && git push && git push --tags && npm publish"
  },
  "engines": {
    "node": ">=4.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunruch/mmcss.git"
  },
  "author": "Kanishk Kunal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kunruch/mmcss/issues"
  },
  "homepage": "https://mmcss.kunruchcreations.com/"
}
