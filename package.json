{
  "name": "mmcss",
  "version": "0.3.3",
  "description": "A Minimal Modern CSS Framework.",
  "main": "dist/mm.css",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "banner-cli": "^0.11.1",
    "gzip-size": "^4.1.0",
    "jstransformer-escape-html": "^1.1.0",
    "mmpilot": "^0.6.6",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "postcss-cli": "^4.1.1",
    "shx": "^0.2.2",
    "stylelint": "^8.4.0"
  },
  "keywords": [
    "css",
    "css3",
    "front-end",
    "framework",
    "html",
    "html5",
    "responsive",
    "mobile",
    "scss"
  ],
  "scripts": {
    "lint": "stylelint \"src/**/*.scss\" --syntax scss",
    "css": "node-sass --source-map dist/mm.css.map --output-style expanded src/mm.scss dist/mm.css",
    "css-min": "node-sass --source-map dist/mm.min.css.map --output-style compressed src/mm.scss dist/mm.min.css",
    "autoprefixer": "postcss -u autoprefixer --no-map.inline --autoprefixer.browsers \"last 2 versions\" -r dist/*.css",
    "banner": "banner-cli dist/*.css",
    "css-build": "npm-run-all css css-min autoprefixer banner && shx cp dist/*.css public/",
    "css-watch": "onchange src -- npm run css-build",
    "dist": "npm-run-all lint css-build && git add dist/*.css && git commit -m \":bookmark: Updating dist\" && git push -u origin master",
    "patch": "npm version patch -m \":bookmark: Version %s\" && git push && git push --tags && npm publish",
    "dist-patch": "npm run dist && npm run patch",
    "web-clean": "mmpilot clean",
    "web-build": "mmpilot build",
    "web-watch": "onchange web -- npm run web-build",
    "serve": "mmpilot serve",
    "web-deploy": "mmpilot deploy",
    "dev": "npm-run-all web-clean css-build web-build --parallel css-watch web-watch serve",
    "deploy": "npm-run-all web-clean css-build web-build"
  },
  "engines": {
    "node": ">=4.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunruch/mm.css.git"
  },
  "author": "Kanishk Kunal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kunruch/mm.css/issues"
  },
  "homepage": "https://getmmcss.com/"
}
