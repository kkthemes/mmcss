{
  "name": "mmcss",
  "version": "0.2.1",
  "description": "A Minimal Modern CSS Framework.",
  "main": "dist/mm.css",
  "dependencies": {
    "susy": "^2.2.12"
  },
  "devDependencies": {
    "npm-run-all": "^3.1.0",
    "shx": "^0.1.4"
  },
  "keywords": [
    "css",
    "css3",
    "front-end",
    "framework",
    "html",
    "html5",
    "responsive",
    "mobile",
    "scss"
  ],
  "scripts": {
    "dev-build": "mm clean && mm build -c _mmpilot.yml,_mmpilot-dev.yml",
    "dev-watch": "mm watch -c _mmpilot.yml,_mmpilot-dev.yml",
    "clean": "mm clean",
    "build": "mm build",
    "serve": "mm serve",
    "dev": "npm-run-all dev-build --parallel dev-watch serve",
    "deploy": "npm run clean && npm run build && mm deploy",
    "dist": "shx cp public/**/*.css dist && git add dist/*.css && git commit -m \"Updating dist\" && git push -u origin master"
  },
  "engines": {
    "node": ">=4.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunruch/mmcss.git"
  },
  "author": "Kanishk Kunal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kunruch/mmcss/issues"
  },
  "homepage": "https://mmcss.kunruchcreations.com/"
}
