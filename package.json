{
  "name": "mmcss",
  "version": "0.3.3",
  "description": "A Minimal Modern CSS Framework.",
  "main": "dist/mm.css",
  "dependencies": {},
  "devDependencies": {
    "gzip-size": "^3.0.0",
    "jstransformer-escape-html": "^1.0.0",
    "mmpilot": "^0.6.2",
    "npm-run-all": "^3.1.2",
    "shx": "^0.2.1",
    "stylelint": "^7.6.0"
  },
  "keywords": [
    "css",
    "css3",
    "front-end",
    "framework",
    "html",
    "html5",
    "responsive",
    "mobile",
    "scss"
  ],
  "scripts": {
    "clean": "mmpilot clean",
    "build": "mmpilot build",
    "serve": "mmpilot serve",
    "dev-build": "mmpilot build -d",
    "dev-watch": "mmpilot watch -d",
    "dev": "npm-run-all clean dev-build --parallel dev-watch serve",
    "deploy": "npm-run-all clean build && mmpilot deploy",
    "dev-dist": "npm-run-all clean dev-build && shx cp public/styles/mm.css dist",
    "prod-dist": "npm-run-all clean build && shx cp public/styles/mm.css dist/mm.min.css",
    "lint": "stylelint \"src/**/*.scss\" --syntax scss",
    "dist": "npm-run-all lint dev-dist prod-dist && git add dist/*.css && git commit -m \":bookmark: Updating dist\" && git push -u origin master",
    "patch": "npm version patch -m \":bookmark: Version %s\" && git push && git push --tags && npm publish",
    "dist-patch": "npm run dist && npm run patch"
  },
  "engines": {
    "node": ">=4.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunruch/mm.css.git"
  },
  "author": "Kanishk Kunal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kunruch/mm.css/issues"
  },
  "homepage": "https://getmmcss.com/"
}
