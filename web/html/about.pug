            div(style="background-color:#2196F3;width:120px;height:120px;border-radius:3px;margin-left:3px;")
            p.text-small.text-center #2196F3
      p.text-center
      span.label MMCSS
      |  and #[span.label.label-primary MMCSS]

    .section
