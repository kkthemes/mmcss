mixin menu(list, classes)
  nav(role="navigation")
    ul(class=classes)
      each item in list
        +menuitem(item)

mixin submenu(item)
  if item.children
    ul.submenu
      each subitem in item.children
        +menuitem(subitem)

mixin menuitem(item)
  if item.url
    li(class=['menu-item'], class={'current-menu-item': page.path == item.url})
      a(href=item.url)&attributes(item.attributes) #{item.title}
      +submenu(item)
  else
    li(class='menu-header') #{item.title}

mixin social(list)
  each item in list
    a.button.button-text(href=item.url, target="_blank")
      | <svg class="icon icon-#{item.icon}"><use xlink:href="#icon-#{item.icon}"></use></svg>
      span #{item.title}


mixin prevmenu(list, classes)
  - var prev = ''
  each item in list
    if(item.url === page.path)
      if(prev.url)
        a(href=prev.url, class=classes) &larr; #{prev.title}
    else
      - prev = item

mixin nextmenu(list, classes)
  - var found = false
  each item in list
    if(found === true)
      if(item.url)
        a(href=item.url, class=classes) #{item.title} &rarr;
      - found = false
    else if(item.url == page.path)
      - found = true