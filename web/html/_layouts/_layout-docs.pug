extends ./_layout-default.pug

block styles
  block docs-styles
  style.
    .header {
      border-bottom: 1px solid #f5f6f7;
    }
    #docs-toggle + label{
      position: fixed;
      bottom: 1rem;
      right: 1rem;
      z-index: 999;
      background-color: #fff;
    }

    .code-example {
      margin-top: 1.5rem;
      border: 2px solid #f5f6f7;
    }

    .code-example .code-output {
      padding: 0 1.5rem 1.5rem;
    }

    .code-example pre {
      margin-top: 0;
    }

    @media (min-width: 960px) {
      .header {
        position: -webkit-sticky;
        position: sticky;
        top: 0;
        z-index: 9999;
      }
      .docs-sidebar {
        position: -webkit-sticky;
        position: sticky;
        top: 4rem;
        z-index: 1000;
        height: calc(100vh - 4rem);
        overflow-y: auto;
        overflow-x: hidden;
      }
    }

block content
  #docs-grid.grid
    .col.col-fixed.docs-sidebar.bg-light.border-right.mr
      .menu-toggle
        input(type="checkbox")#docs-toggle
        label(for="docs-toggle").alignright
          span.css-icon-hamburger
            span Toggle
          span Docs
        .menu-toggle-content.p-4(style="width:280px;")
          +menu(data.menu.docs)
    .col
      .container-content.pb
        h1 #{page.title}
        p.text-small.text-muted #{page.description}
        div.py!= page.content
        .grid.py-3
          .col
            +prevmenu(data.menu.docs, 'alignleft')
          .col
            +nextmenu(data.menu.docs, 'alignright')
        p.py.text-small.text-muted.text-center Want to contribute to the documentation? <a href="#{site.github}/blob/master/web/html/#{page.source}" target="_blank">Edit this page</a> on Github.

block footer