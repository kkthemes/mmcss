doctype html
block vars
- var url_base = 'https://mmcss.kkthemes.com/'
html(lang='en-US')
  head
    meta(charset='UTF-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{title} - MMCSS
    meta(name='description', content='#{description}')
    meta(property='og:title', content='#{title}')
    meta(property='og:type', content='website')
    meta(property='og:url', content='#{url_base}#{path}')
    meta(property='og:image', content='#{url_base}img/mmcss.png')
    link(rel='canonical', href='#{url_base}#{path}')
    link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400i,700', rel='stylesheet', type='text/css')
    +style('mm')
    block styles
    link(rel='icon', href='#{url_base}img/mmcss-favicon-32x32.png', sizes='32x32')
    link(rel='icon', href='#{url_base}img/mmcss-favicon-192x192.png', sizes='192x192')
    link(rel='apple-touch-icon-precomposed', href='#{url_base}img/mmcss-favicon-180x180.png')
    meta(name='msapplication-TileImage', content='#{url_base}img/mmcss-favicon-270x270.png')
    +analytics
  body#top
    header#header
        .container-content.section-block
            h1.site-title
                a(href='/') MMCSS

    block content
  block scripts